<!--　Home  -->

<!-- サイドバー -->

<div class="row">
  <div class="col-xs-3">

    <h2>User info</h2>
    <table class="table">
      <tbody>
        <tr><%= attachment_image_tag @user, :profile_image, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg", size: "100x100" %>
        </tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
      </tbody>
    </table>
    <div class="row">
      <%= link_to edit_user_path(@user.id), class: "col-xs-12 btn btn-default" do %>
        <span class="glyphicon glyphicon-wrench"></span>
      <% end %>
    </div>

    <%= render 'books/new', book: @book %>

  </div>

  <!-- 投稿一覧 -->

  <div class="col-xs-9">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td>
            <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg", size: "40x40" %>
          </td>
          <td>
            <%= link_to book_path(book.id) do %>
              <span><%= book.title %></span>
            <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>